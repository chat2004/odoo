<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <!-- RULES -->
        <record id="oit_hr_message_officer" model="ir.rule">
            <field name="name">mail.message: messages access employee officer</field>
            <field name="model_id" ref="mail.model_mail_message"/>
            <field name="domain_force">['&amp;','|',('create_uid', '=', user.id),'&amp;',('subtype_id.name', 'not like', 'Private'),('subtype_id.name', 'not like', 'Salary'),
                ('model', 'in', ['hr.employee','hr.department'])]</field>
            <field name="groups" eval="[(4, ref('hr.group_hr_user'))]"/>
        </record>

        <record id="oit_hr_message_manager" model="ir.rule">
            <field name="name">mail.message: message access employee manager</field>
            <field name="model_id" ref="mail.model_mail_message"/>
            <field name="domain_force">[('model', 'in', ['hr.employee','hr.department'])]</field>
            <field name="groups" eval="[(4, ref('hr.group_hr_manager'))]"/>
        </record>

    </data>
</odoo>