<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <!-- Users Groups-->
        <record model="res.groups" id="oit_group_global_salary">
            <field name="name">Salary Information</field>
        </record>

        <!-- RULES -->

        <record id="oit_mail_message_view_public" model="ir.rule">
            <field name="name">mail.message: access public message</field>
            <field name="model_id" ref="mail.model_mail_message"/>
            <field name="domain_force">['&amp;','|',('create_uid', '=', user.id),'&amp;',('subtype_id.name', 'not like', 'Private'),('subtype_id.name', 'not like', 'Salary'),
                '|','&amp;',('res_id', 'in', [e.id for e in user.employee_ids]),('model', '=', 'hr.employee'),
                '&amp;',('res_id', '=', user.commercial_partner_id.id),('model', '=', 'res.partner')]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        </record>
        <record id="oit_mail_message_mail_channel" model="ir.rule">
            <field name="name">mail.message: messages access mail channel</field>
            <field name="model_id" ref="mail.model_mail_message"/>
            <field name="domain_force">[('model', '=', 'mail.channel')]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        </record>
        <record id="oit_mail_message_calendar_event" model="ir.rule">
            <field name="name">mail.message: messages access calendar event</field>
            <field name="model_id" ref="mail.model_mail_message"/>
            <field name="domain_force">[('model', '=', 'calendar.event')]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        </record>
        <record id="oit_mail_message_type_email" model="ir.rule">
            <field name="name">mail.message: messages access email</field>
            <field name="model_id" ref="mail.model_mail_message"/>
            <field name="domain_force">['&amp;',('create_uid', '=', user.id),('message_type', '=', 'email')]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        </record>
