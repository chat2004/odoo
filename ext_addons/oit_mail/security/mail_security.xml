        <record id="oit_mail_message_view_private" model="ir.rule">
            <field name="name">mail.message: access private, salary message</field>
            <field name="model_id" ref="mail.model_mail_message"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('oit_group_global_salary'))]"/>
        </record>
