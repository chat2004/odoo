<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- Users Groups-->
        <record model="res.groups" id="oit_group_global_salary">
            <field name="name">Salary Information</field>
        </record>

        <!-- RULES -->

        <record id="oit_mail_message_view_public" model="ir.rule">
            <field name="name">mail.message: access public message</field>
            <field name="model_id" ref="mail.model_mail_message"/>
            <field name="domain_force">['|','&amp;',('create_uid', '=', user.id),('subtype_id.name', 'not like', 'Private'),('subtype_id.name', 'not like', 'Salary')]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        </record>
        <record id="oit_mail_message_view_private" model="ir.rule">
            <field name="name">mail.message: access private, salary message</field>
            <field name="model_id" ref="mail.model_mail_message"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('oit_group_global_salary'))]"/>
        </record>

    </data>
</odoo>