<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- RULES -->
        <record id="oit_mail_message_object_comment_public" model="ir.rule">
            <field name="name">mail.message.subtype: access public object comments</field>
            <field name="model_id" ref="mail.model_mail_message"/>
            <field name="domain_force">[('subtype_id.name', '!=', 'Salary')]</field>
            <field name="groups" eval="[(4, ref('hr_recruitment.group_hr_recruitment_user'))]"/>
        </record>

        <record id="oit_mail_message_view_public" model="ir.rule">
            <field name="name">mail.message: access public message</field>
            <field name="model_id" ref="mail.model_mail_message"/>
            <field name="domain_force">['|',('create_uid', '=', user.id),('subtype_id.name', 'not like', 'Private')]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        </record>

    </data>
</odoo>