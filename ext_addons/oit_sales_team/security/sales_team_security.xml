<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <!-- RULES -->
        <record id="oit_sales_team_message_crm_own_document" model="ir.rule">
            <field name="name">mail.message: messages access sale own document</field>
            <field name="model_id" ref="mail.model_mail_message"/>
            <field name="domain_force">['&amp;',('create_uid', '=', user.id),('model', '=', 'crm.lead')]</field>
            <field name="groups" eval="[(4, ref('sales_team.group_sale_salesman'))]"/>
        </record>
        <record id="oit_sales_team_message_crm_all_document" model="ir.rule">
            <field name="name">mail.message: messages access sale all document</field>
            <field name="model_id" ref="mail.model_mail_message"/>
            <field name="domain_force">['&amp;','|',('create_uid', '=', user.id),'&amp;',('subtype_id.name', 'not like', 'Private'),('subtype_id.name', 'not like', 'Salary'),
                ('model', '=', 'crm.lead')]</field>
            <field name="groups" eval="[(4, ref('sales_team.group_sale_salesman_all_leads'))]"/>
        </record>
        <record id="oit_sales_team_message_crm_manager" model="ir.rule">
            <field name="name">mail.message: message access sale manager</field>
            <field name="model_id" ref="mail.model_mail_message"/>
            <field name="domain_force">[('model', '=', 'crm.lead')]</field>
            <field name="groups" eval="[(4, ref('sales_team.group_sale_manager'))]"/>
        </record>

    </data>
</odoo>