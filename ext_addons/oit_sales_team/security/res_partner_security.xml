<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <!-- RULES -->
        <record id="oit_base_message_partner_own_document" model="ir.rule">
            <field name="name">mail.message: messages access partner own document</field>
            <field name="model_id" ref="mail.model_mail_message"/>
            <field name="domain_force">['&amp;',('create_uid', '=', user.id),('model', '=', 'res.partner')]</field>
            <field name="groups" eval="[(4, ref('sales_team.group_sale_salesman'))]"/>
        </record>
        <record id="oit_base_message_partner_all_document" model="ir.rule">
            <field name="name">mail.message: messages access partner all document</field>
            <field name="model_id" ref="mail.model_mail_message"/>
            <field name="domain_force">['&amp;','|',('create_uid', '=', user.id),'&amp;',('subtype_id.name', 'not like', 'Private'),('subtype_id.name', 'not like', 'Salary'),
                ('model', '=', 'res.partner')]</field>
            <field name="groups" eval="[(4, ref('sales_team.group_sale_salesman_all_leads'))]"/>
        </record>
        <record id="oit_base_message_partner_manager" model="ir.rule">
            <field name="name">mail.message: message access partner manager</field>
            <field name="model_id" ref="mail.model_mail_message"/>
            <field name="domain_force">[('model', '=', 'res.partner')]</field>
            <field name="groups" eval="[(4, ref('sales_team.group_sale_manager'))]"/>
        </record>

    </data>
</odoo>