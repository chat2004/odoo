        <!-- RULES -->
        <record id="oit_recruitment_message_officer" model="ir.rule">
            <field name="name">mail.message: messages access recruitment officer</field>
            <field name="model_id" ref="mail.model_mail_message"/>
            <field name="domain_force">[('subtype_id.name', '!=', 'Salary')]</field>
            <field name="groups" eval="[(4, ref('hr_recruitment.group_hr_recruitment_user'))]"/>
            <field name="domain_force">['&amp;','|',('create_uid', '=', user.id),'&amp;',('subtype_id.name', 'not like', 'Private'),('subtype_id.name', 'not like', 'Salary'),
                ('model', 'in', ['hr.applicant','hr.job'])]</field>
        </record>

        <record id="oit_recruitment_message_manager" model="ir.rule">
            <field name="name">mail.message: message access recruitment manager</field>
            <field name="model_id" ref="mail.model_mail_message"/>
            <field name="domain_force">[('model', 'in', ['hr.applicant','hr.job'])]</field>
            <field name="groups" eval="[(4, ref('hr_recruitment.group_hr_recruitment_manager'))]"/>
        </record>

